{% extends 'base.html.twig' %}

{% block content %}
    <h1>Pizza</h1>

    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ pizza.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ pizza.name }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ pizza.price }}</td>
                </tr>
                <tr>
                    <th>Ingredients</th>
                    <td>
                        {% for ingredient in pizza.pizzaIngredients|sort %}
                            {{ ingredient.ingredient.name }} {% if not loop.last %},{% endif %}
                        {% endfor %}
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <a href="{{ path('pizza_index') }}" class="btn btn-primary">Back to the list</a>
            <a href="{{ path('pizza_edit', { 'id': pizza.id }) }}" class="btn btn-success">Edit</a>
        </div>
        <div class="col-md-8">
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete" class="btn btn-danger float-right">
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
