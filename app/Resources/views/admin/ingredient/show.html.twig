{% extends 'base.html.twig' %}

{% block content %}
    <h1>Ingredient</h1>

    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ ingredient.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ ingredient.name }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ ingredient.price }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <a href="{{ path('ingredient_index') }}" class="btn btn-primary">Back to the list</a>
            <a href="{{ path('ingredient_edit', { 'id': ingredient.id }) }}" class="btn btn-success">Edit</a>
        </div>
        <div class="col-md-8">
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete" class="btn btn-danger float-right">
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
